<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.deliveryOrderModule.UI.DeliveryDocumentLineActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10sp"
                android:gravity="center_vertical"
                android:layout_marginBottom="10sp"
                android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="70"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:gravity="center_vertical"
                android:layout_marginBottom="10sp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_onback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_arrow_back_24"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/muli_bold"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="8sp"
                    android:text="@string/delivery"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_12"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_item_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muli_regular"
                    android:layout_marginTop="2dp"
                    android:paddingLeft="8sp"
                    android:text=" "
                    android:textSize="@dimen/text_size_12"
                    android:textStyle="bold" />

            </LinearLayout>
            <LinearLayout
                android:layout_weight="30"
                android:layout_width="0dp"
                android:gravity="right"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/iv_laser_code"
                    android:textColor="#ffffff"
                    android:background="@color/transparent_color"
                    android:textCursorDrawable="@drawable/custom_cursor"
                    android:layout_width="25dp"
                    android:layout_height="25dp">
                </EditText>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_scan_batch_code"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8sp"
                    android:src="@drawable/ic_baseline_qr_code_scanner_24" />


            </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/recycler_view_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center|center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvDocumentLineList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:itemCount="10"
                android:visibility="visible"
                tools:listitem="@layout/production_order_lines_adapter_layout" />

            <ImageView
                android:id="@+id/iv_no_data_found"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:visibility="gone"
                android:src="@drawable/nodatafound"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_alignParentBottom="true"
            android:background="@color/transparent_color"
            android:orientation="horizontal"
            android:padding="5dp">

            <com.google.android.material.chip.ChipGroup
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:elevation="2dp"
                    android:fontFamily="@font/muli_bold"
                    android:text="Cancel"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    app:chipBackgroundColor="@color/my_app_background_color"
                    app:chipIconTint="@color/colorPrimary"
                    app:chipStrokeColor="@color/colour_text_color"
                    app:chipStrokeWidth="1dp"
                    app:rippleColor="@color/colour_text_color"/>
            </com.google.android.material.chip.ChipGroup>

            <com.google.android.material.chip.ChipGroup
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_save"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:elevation="2dp"
                    android:fontFamily="@font/muli_bold"
                    android:gravity="center_horizontal"
                    android:text="Save"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:textColor="@color/my_app_background_color"
                    android:textStyle="bold"
                    app:chipBackgroundColor="@color/colorPrimary"
                    app:chipIconTint="@color/colorPrimary"
                    app:chipStrokeColor="@color/colour_text_color"
                    app:chipStrokeWidth="1dp"
                    app:rippleColor="@color/colour_text_color"/>
            </com.google.android.material.chip.ChipGroup>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>